{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "vitest",
      "node"
    ],
    "moduleResolution": "bundler"
  },
  "include": [
    "nuxt.config.ts",
    "app.vue",
    "components/**/*.vue",
    "sections/**/*.vue",
    "pages/**/*.vue",
    "composables/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.d.ts",
    ".nuxt/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
